<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_5"
    android:layout_marginTop="@dimen/margin_5"
    android:layout_marginLeft="@dimen/margin_5"
    android:background="@color/white"
    android:orientation="vertical"
    card_view:cardCornerRadius="@dimen/margin_5"
    card_view:cardElevation="@dimen/margin_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_size_100">

        <ImageView
            android:id="@+id/imgGif"
            android:layout_width="@dimen/img_size_150"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/margin_5"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/txtGifName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imgFav"
            android:layout_toRightOf="@+id/imgGif"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/margin_5" />



        <ImageView
            android:id="@+id/imgFav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_favorite_black_24px"
            android:layout_marginRight="@dimen/margin_5" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
